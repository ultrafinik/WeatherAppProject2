<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_weather"
    app:startDestination="@id/detailFragment">
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.weatherappproject.view.DetailFragment"
        android:label="DetailFragment">
        <action
            android:id="@+id/action_DetailFragment_to_AllFragment"
            app:destination="@+id/AllFragment"/>
    </fragment>
    <fragment
        android:id="@+id/allFragment"
        android:name="com.example.weatherappproject.view.AllFragment"
        android:label="AllFragment">
        <action
            android:id="@+id/action_allFragment_to_detailFragment"
            app:destination="@+id/detailFragment"/>
    </fragment>

</navigation>